- @page_title = "所持アイテム一覧"
%h1= @page_title

.card.desc
  .card-header
    - act_icon(true)
    検索仕様
    - act_desc(true)
  .card-body
    = render "layouts/base_desc"
    %p
      %span.example_select.example_toggle.pointer
        - help_icon
        入力例
        - act_desc(false)
    #example.closed
      = render "layouts/input_desc"
= search_form_for @search do |f|
  %table.search_toggle.table.table-striped.table-bordered.table-hover
    %tbody.pointer
      %tr
        %td{colspan: 5}
          - act_icon(true)
          絞り込み検索
          - act_desc(true)
    %tbody
      %tr
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "更新回", params_name: "result_no_form", placeholder: nil, colspan: 3)
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "PNo", params_name: "p_no_form", placeholder: "Number")
        - td_form(f, @form_params, @placeholder, class_name: "formText", label: "キャラクター名", params_name: "pc_name_form", placeholder: "Name")
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formText",  label: "アイテム名", params_name: "name_form", colspan: 3)
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formText",  label: "種類", params_name: "type_form", placeholder: "Number")
        - td_form(f, @form_params, @placeholder, class_name: "formNum",  label: "強さ", params_name: "strength_form")
      %tr
        %td.indent
        - td_form(f, @form_params, @placeholder, class_name: "formText",  label: "備考", params_name: "note_form", colspan: 3)
      %tr.sep
        %td.indent
        %td.indent= hidden_field_tag :is_form, 1
        %td{colspan: 3}
          - search_submit_button


= paginate(@items)
%br
ヒット数：#{ @count }件
%br
%br

%table.table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th= sort_link(@search, :result_no,"更新回", default_order: :desc)
      %th= sort_link(@search, :p_no,"キャラクター(PNo)", default_order: :desc)
      %th= sort_link(@search, :i_no, "No.", default_order: :desc)
      %th= sort_link(@search, :name, "アイテム名", default_order: :desc)
      %th= sort_link(@search, :type_id, "種類", default_order: :desc)
      %th= sort_link(@search, :strength, "強さ", default_order: :desc)
      %th= sort_link(@search, :note, "備考", default_order: :desc)
      %th.sep{colspan: 2} 結果リンク
  %tbody
    - @items.each do |item|
      %tr
        %td= item.result_no
        %td= pc_name_text(item.p_no, item.pc_name)
        %td= item.i_no
        %td= item.name
        %td= item.type.name if item.type
        %td= item.strength
        %td= item.note
        %td.sep= character_link(item.p_no)
        %td= character_old_link(@latest_result, item.p_no, item.result_no, item.generate_no)
- p_no_concat_button
= paginate(@items)
